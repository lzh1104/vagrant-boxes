{
  "min_packer_version": "0.6.0",
  "variables": {
    "build_version": "{{env `BUILD_VERSION`}}"
  },
  "builders": [
    {
      "name": "CentOS-6.10-i386-{{user `build_version`}}",
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat",
      "iso_url": "https://mirror.tuna.tsinghua.edu.cn/centos-vault/6.10/isos/i386/CentOS-6.10-i386-minimal.iso",
      "iso_checksum": "cfa7d1808ab1ef4821276b18e05f4a4a7d15560a6a2d8e31caf2fa07fd4cd252",
      "iso_checksum_type": "sha256",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "disk_size": 204800,
      "http_directory": "http",
      "boot_command": ["<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter><wait>"],
      "boot_wait": "10s",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "90m",
      "shutdown_command": "sudo /sbin/halt -p now",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "480"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/chef.sh",
        "scripts/puppet.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/cleanup.sh",
        "scripts/info.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "./builds/{{.BuildName}}.box"
    }
  ]
}
